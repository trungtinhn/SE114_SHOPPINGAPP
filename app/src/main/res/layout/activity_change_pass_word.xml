<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".Login.LoginActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBacktoAccount"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="Click to go to the home page"
            android:background="@drawable/navigation_back_arrow" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Change password"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black">

        </TextView>
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        app:cardCornerRadius="30dp"
        android:elevation="10dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">
            <EditText
                android:id="@+id/email_edittext_ChangePass"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Email Address"
                android:fontFamily="@font/montserrat"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:padding="16dp" />

            <androidx.appcompat.widget.AppCompatButton
                app:cornerRadius="10dp"
                android:id="@+id/verify_button_ChangePass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verify Email"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="16sp"
                android:background="@drawable/corner_radius_20"
                android:backgroundTint="@color/orange" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>