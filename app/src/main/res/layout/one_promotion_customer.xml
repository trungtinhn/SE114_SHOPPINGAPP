<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:orientation="horizontal"
    android:id="@+id/layout"
    android:background="@drawable/background_categories"
    android:layout_height="150dp">

    <RadioButton
        android:id="@+id/Check"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:buttonTint="@color/voucher_chk" />

    <LinearLayout
        android:layout_toRightOf="@id/Check"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imagePromotion"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="productcard"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_product"
            app:shapeAppearanceOverlay="@style/roundimageview" />
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtNamePromotion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Chương Trình Khuyến Mãi Lớn Nhất Năm"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtDetailsPromotion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Giảm 15%"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txtStartPromotion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="18/07/2023"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="italic" />
                <TextView
                    android:layout_marginLeft="2dp"
                    android:layout_width="wrap_content"
                    android:text=" - "
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtEndPromotion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="01/08/2023"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="italic" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>