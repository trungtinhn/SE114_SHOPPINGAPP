<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sub"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/headingProductDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            style="@style/RectangleStyle"
            android:padding="10dp">

            <ImageView
                android:id="@+id/backIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:src="@drawable/baseline_arrow_back_24"
                android:layout_marginHorizontal="10dp"
                />
        <TextView
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/backIcon"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black"
            android:text="Cart"
            android:textSize="25dp"
            android:textStyle="bold" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/scrollView"
        app:layout_constraintVertical_bias="0.0"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
                android:paddingVertical="10dp"
                android:background="@drawable/background_product_sliver">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image_product"
                        android:layout_width="126dp"
                        android:layout_height="126dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="20dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_product" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_centerVertical="true"
                        android:paddingVertical="10dp"
                        android:layout_toStartOf="@+id/image_next"
                        android:layout_toEndOf="@+id/image_product"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_tensp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Ten San Pham"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_MauSac"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:textColor="@color/black"
                            android:text="Hồng"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txt_KichThuoc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:textColor="@color/black"
                            android:text="L"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txt_soluong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:textColor="@color/black"
                            android:text="10"
                            android:textSize="16sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/txt_giaban"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat"
                                android:textColor="@color/black"
                                android:text="200.000"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@id/txt_giaban"
                                android:fontFamily="@font/montserrat"
                                android:textColor="@color/black"
                                android:text="VND"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/image_next"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/navigation_after" />
                </RelativeLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/click_giamgia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:text="Offer Details"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/right" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/layout_not_promotion"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="60dp">
                <TextView
                    android:id="@+id/txt_giagia"
                    android:layout_width="308dp"
                    android:layout_height="42dp"
                    android:text="Mega Details"
                    android:textAlignment="center"
                    android:textSize="20sp"/>

                <CheckBox
                    android:id="@+id/checkbox_voucher"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:id="@+id/layout_promotion"
                android:gravity="center_vertical"
                android:layout_height="90dp">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/background_categories"
                    android:layout_width="320dp"
                    android:layout_height="90dp">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imagePromotion"
                        android:layout_width="70dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="70dp"
                        android:contentDescription="productcard"
                        android:scaleType="fitCenter"
                        android:src="@drawable/mauaodep"
                        app:shapeAppearanceOverlay="@style/roundimageview" />
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txtNamePromotion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Chương Trình Khuyến Mãi Lớn Nhất Năm"
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            tools:ignore="TextSizeCheck" />

                        <TextView
                            android:id="@+id/txtDetailsPromotion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Giảm 15%"
                            android:textColor="@color/black"
                            android:textSize="13dp"
                            android:textStyle="bold"
                            tools:ignore="TextSizeCheck" />
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/txtStartPromotion"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="18/07/2023"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                android:textStyle="italic"
                                tools:ignore="TextSizeCheck" />
                            <TextView
                                android:layout_marginLeft="2dp"
                                android:layout_width="wrap_content"
                                android:text="-"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/txtEndPromotion"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:gravity="center"
                                android:text="01/08/2023"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                android:textStyle="italic"
                                tools:ignore="TextSizeCheck" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <CheckBox
                    android:id="@+id/checkBox_payment12"
                    android:layout_width="match_parent"
                    android:checked="true"
                    android:enabled="false"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/click_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:text="Delivery Address"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"

                    android:src="@drawable/right" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout_not_address"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/address" />

                <TextView
                    android:id="@+id/txt_address"
                    android:layout_width="243dp"
                    android:layout_height="42dp"
                    android:text="Add your address"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/checkbox_address1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_address"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <LinearLayout
                    android:background="@drawable/background_categories"
                    android:orientation="vertical"
                    android:layout_width="320dp"

                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txt_Ten"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="TrungTinh"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:text="|"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/txt_SDT"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="0704408389"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_marginLeft="15dp"
                        android:id="@+id/txt_DC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="TrungTinh"
                        android:textSize="15sp" />
                    <TextView
                        android:layout_marginLeft="15dp"
                        android:id="@+id/txt_PX"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Dinh Bo Linh"
                        android:textSize="15sp" />
                </LinearLayout>
                <CheckBox
                    android:id="@+id/checkBox_payment1"
                    android:layout_width="match_parent"
                    android:checked="true"
                    android:enabled="false"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/click_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:text="Payment Method"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"

                    android:src="@drawable/right" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/visa" />

                <TextView
                    android:id="@+id/txt_payment"
                    android:layout_width="243dp"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:text="Cash Payment"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/checkBox_payment"
                    android:layout_width="match_parent"
                    android:checked="true"
                    android:enabled="false"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Info"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subtotal"
                        android:textAlignment="viewStart"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/subtotal_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20dp"
                        android:text="0"
                        android:textAlignment="textEnd"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Discount"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/discount_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20dp"
                        android:text="0"
                        android:textAlignment="textEnd"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery Charge"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/delivery_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20dp"
                        android:text="0"
                        android:textAlignment="textEnd"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/total_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20dp"
                        android:text="0"
                        android:textAlignment="textEnd"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/btn_checkout"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:background="@drawable/background_btn_orange"
                    android:gravity="center"
                    android:text="CHECK OUT"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>