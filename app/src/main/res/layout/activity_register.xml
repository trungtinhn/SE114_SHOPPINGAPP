<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/btnBacktoLogin"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/back"
            android:contentDescription="Click to go to the home page" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN UP"
            android:textColor="@color/DarkBlue"
            android:fontFamily="@font/montserrat_medium"
            android:textAlignment="center"
            android:textSize="40dp"
            android:layout_marginLeft="110dp"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:fontFamily="@font/montserrat"
            android:paddingLeft="5dp"
            android:textSize="18dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:layout_marginBottom="6dp"/>

        <RelativeLayout
            android:id="@+id/frame_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/layout1" >


            <EditText
                android:id="@+id/editTextFullName"
                style="@style/AppEditText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/montserrat"
                android:hint="Your Name"
                android:padding="10dp"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:textSize="15dp" />

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E-mail"
            android:fontFamily="@font/montserrat"
            android:paddingLeft="5dp"
            android:textSize="18dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:layout_marginBottom="6dp"/>
        <RelativeLayout
            android:id="@+id/frame_email"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/frame_name"
            android:layout_height="wrap_content"
            android:background="@drawable/layout1" >

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/icon_mail"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:clipToOutline="true"
                android:elevation="200dp"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="350dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:src = "@drawable/mail"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
            <EditText
                android:id="@+id/editTextEmail"
                style="@style/AppEditText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/montserrat"
                android:hint="Your E-mail"
                android:padding="10dp"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:textSize="15dp" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:fontFamily="@font/montserrat"
            android:paddingLeft="5dp"
            android:textSize="18dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:layout_marginBottom="6dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/frame_name"
            android:layout_height="wrap_content"
            android:background="@drawable/layout1" >
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="25dp"
                android:layout_height="25dp"

                android:clipToOutline="true"
                android:elevation="200dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="346dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:src = "@drawable/phonegray"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent"/>
            </RelativeLayout>

            <EditText
                android:id="@+id/editTextPhone"
                style="@style/AppEditText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/montserrat"
                android:hint="Your phone number"
                android:padding="10dp"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:textSize="15dp" />

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Day Of Birth"
            android:fontFamily="@font/montserrat"
            android:paddingLeft="5dp"
            android:textSize="18dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:layout_marginBottom="6dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/frame_name"
            android:layout_height="wrap_content"
            android:background="@drawable/layout1" >


            <EditText
                android:id="@+id/editTextDayOfBirth"
                style="@style/AppEditText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/montserrat"
                android:hint="Your day of birth"
                android:padding="10dp"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:textSize="15dp" />

        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:fontFamily="@font/montserrat"
            android:paddingLeft="5dp"
            android:textSize="18dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:layout_marginBottom="6dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/frame_name"
            android:layout_height="wrap_content"
            android:background="@drawable/layout1" >

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:clipToOutline="true"
                android:elevation="200dp"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="350dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:src = "@drawable/eyeoff"
                    android:scaleType="centerCrop"
                    android:id ="@+id/showpassword"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
            <EditText
                android:id="@+id/editTextPassword"
                style="@style/AppEditText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/montserrat"
                android:hint="Your password"
                android:padding="10dp"
                android:paddingLeft="20dp"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textSize="15dp" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:fontFamily="@font/montserrat"
            android:paddingLeft="5dp"
            android:textSize="18dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:layout_marginBottom="6dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/frame_name"
            android:layout_height="wrap_content"
            android:background="@drawable/layout1" >


            <EditText
                android:id="@+id/editTextConfirmPassword"
                style="@style/AppEditText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/montserrat"
                android:hint="Your confirm password"
                android:padding="10dp"
                android:paddingLeft="20dp"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textSize="15dp" />
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:clipToOutline="true"
                android:elevation="200dp"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="350dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:id ="@+id/showconfirmpassword"
                    android:src = "@drawable/eyeoff"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent"/>
            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/by_signing_"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="@string/by_signing_"
            android:fontFamily="@font/montserrat"
            android:textAppearance="@style/by_signing_"
            android:paddingBottom="20dp"
            />

        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Sign Up"
            android:layout_marginBottom="30dp"/>

    </LinearLayout>

</ScrollView>
