<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="3dp"
    android:layout_marginHorizontal="20dp"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:id = "@+id/heading"
        android:layout_height="80dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgAvt_order"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="150dp"
            android:src="@drawable/mauaodep"
            app:shapeAppearance="@style/avatar" />

        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-130dp"
            android:layout_marginTop="10dp"
            android:text="Trạng thái"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txtContentNotification_order"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-280dp"
            android:layout_marginTop="30dp"
            android:text="Lorem ipsum dolor sit amet aloooooooooooooooooooooooooooo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/heading"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:text="Mã đơn hàng: " />

        <TextView
            android:id="@+id/ID_order"
            android:textColor="@color/black"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Mã đơn hàng:" />
    </LinearLayout>

</RelativeLayout>