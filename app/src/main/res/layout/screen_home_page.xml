<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/empty_tall_divider"
            android:dividerPadding="10dp"
            android:gravity="end"
            android:orientation="horizontal"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:showDividers="middle">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_setting"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/icon_setting"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingEnd="10dp"
                android:paddingRight="10dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_chat"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/icon_message"
                android:paddingStart="10dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="#D0D9E1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_avt"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="8dp"
                android:src="@color/teal_700"
                app:shapeAppearanceOverlay="@style/Circular" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:paddingEnd="50dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_lights"
                    android:text="Le Dang Thuong"
                    android:textColor="#000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_lights"
                        android:text="ID: "
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_lights"
                        android:text="21522654"
                        android:textColor="#000000" />
                </LinearLayout>
            </LinearLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:fontFamily="@font/montserrat_medium"
                android:text="View shop"
                android:textAllCaps="false"
                android:textColor="#FF8400"
                android:textSize="11dp"
                app:backgroundTint="#FFFFFF"
                app:strokeColor="#FF8400"
                app:strokeWidth="1dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/textView23"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="#D0D9E1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/order_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="Order news"
                android:textColor="#000000"
                android:textSize="12dp"
                tools:ignore="TextSizeCheck" />
            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableEnd="@drawable/navigation_after"
                android:drawablePadding="10dp"
                android:fontFamily="@font/montserrat_lights"
                android:text="View now"
                android:textAlignment="textEnd"
                android:textColor="#000000"
                android:textSize="7dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/view2"
                tools:ignore="TextSizeCheck" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:divider="@drawable/empty_tall_divider"
            android:orientation="horizontal"
            android:padding="20dp"
            android:showDividers="middle">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cancel"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="0.25"
                android:background="@drawable/button_shape"
                android:backgroundTint="#F3F3F3"
                android:fontFamily="@font/montserrat_lights"
                android:text="+10\nCancel"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="11sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_wait"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="0.25"
                android:background="@drawable/button_shape"
                android:fontFamily="@font/montserrat_lights"
                android:text="+10\nWait"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="11sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_request"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="0.25"
                android:background="@drawable/button_shape"
                android:backgroundTint="#F3F3F3"
                android:fontFamily="@font/montserrat_lights"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="+10\nRequest"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="11sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_Review"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="0.25"
                android:background="@drawable/button_shape"
                android:backgroundTint="#F3F3F3"
                android:fontFamily="@font/montserrat_lights"
                android:text="+10\nReview"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="11sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/textView15"
            android:layout_width="413dp"
            android:layout_height="12dp"
            android:background="#D0D9E1" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_my_product"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/box"
                android:fontFamily="@font/montserrat_lights"
                android:lineSpacingExtra="0sp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_lights"
                android:text="My Product"
                android:textColor="#000000"
                android:textSize="10dp" />
        </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_my_order"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/btn_my_order"
                    android:fontFamily="@font/montserrat_lights"
                    android:lineSpacingExtra="0sp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_lights"
                    android:text="My Order"
                    android:textColor="#000000"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_promotions"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/btn_promotions"
                    android:fontFamily="@font/montserrat_lights"
                    android:lineSpacingExtra="0sp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_lights"
                    android:text="Promotions"
                    android:textColor="#000000"
                    android:textSize="10dp" />
            </LinearLayout>
        </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_financial_report"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/btn_financial"
                        android:fontFamily="@font/montserrat_lights"
                        android:lineSpacingExtra="0sp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_lights"
                        android:text="Financial Report"
                        android:textColor="#000000"
                        android:textSize="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_manage_user"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/btn_manage_user"
                        android:fontFamily="@font/montserrat_lights"
                        android:lineSpacingExtra="0sp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_lights"
                        android:text="Manage User"
                        android:textColor="#000000"
                        android:textSize="10dp" />
                </LinearLayout>
            </TableRow>
        </TableLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>