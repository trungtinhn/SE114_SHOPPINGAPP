<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_bg"
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/rectangle_1" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_avt_account"
            android:layout_width="97dp"
            android:layout_height="98dp"

            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:src="@mipmap/ic_launcher_round"
            app:layout_constraintBottom_toTopOf="@+id/user_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/Circular" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/montserrat_light"
            android:text="Lê Khánh Duy"
            android:textColor="#000000"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/img_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/constraintLayout"
        android:layout_marginTop="36dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_behind_border"
            android:clickable="true"
            >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_soldout"
                />

            <TextView
                android:id="@+id/btn_your_oder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/imageView2"
                android:backgroundTint="@android:color/white"
                android:fontFamily="@font/montserrat_light"
                android:gravity="left|center_vertical"
                android:hint="Your Order                                                 >"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/l1"
            android:layout_marginTop="15dp"
            android:background="@drawable/background_behind_border"
            android:clickable="true"

            >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="40dp"
                android:layout_height="32dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/icon_message" />

            <TextView
                android:id="@+id/txt_Help_center"
                android:layout_width="350dp"
                android:layout_height="34dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@android:color/white"
                android:fontFamily="@font/montserrat_light"
                android:gravity="left|center_vertical"
                android:hint="Help Center                                               >"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_below="@+id/l2"
            android:id="@+id/l3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_behind_border"
            android:clickable="true"

            >
            <ImageView
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/imageView4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/user" />
            <TextView
                android:id="@+id/btn_Profile"
                android:layout_width="350dp"
                android:layout_height="34dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@android:color/white"
                android:fontFamily="@font/montserrat_light"
                android:gravity="left|center_vertical"
                android:hint="Profile                                                          >"
                android:textStyle="bold"
                android:textSize="18dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_below="@+id/l3"
            android:id="@+id/l4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_behind_border"
            android:clickable="true"
            >
            <ImageView
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:id="@+id/imageView5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/review" />
            <TextView
                android:layout_marginStart="10dp"
                android:id="@+id/btn_Change_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_Profile"
                android:layout_marginTop="15dp"
                android:backgroundTint="@android:color/white"
                android:fontFamily="@font/montserrat_light"
                android:gravity="left|center_vertical"
                android:hint="Change Password                                  >"
                android:textStyle="bold"
                android:textSize="18dp"/>
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/background_behind_border"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/l4"
            android:id="@+id/l5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            >
            <TextView
                android:id="@+id/btn_log_out"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:backgroundTint="@android:color/white"
                android:fontFamily="@font/montserrat_light"
                android:gravity="left|center_vertical"
                android:hint="Log Out                                                                  >"
                android:textStyle="bold"
                android:textSize="18dp"/>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>