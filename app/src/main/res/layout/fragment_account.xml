<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical"
        android:background="@drawable/bg_profile">
        <androidx.cardview.widget.CardView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_gravity="center"
            android:id="@+id/cv_avt_profile"
            android:layout_marginTop="20dp"
            android:elevation="10dp"
            app:cardCornerRadius="130dp">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_avt_account"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/default_user"
            app:shapeAppearanceOverlay="@style/Circular"
            android:background="@color/white"
            app:srcCompat="@drawable/default_user"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/user_name"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="15dp"
            android:paddingVertical="5dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Name"
            android:textColor="#fb7021"
            android:textSize="23sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/constraintLayout"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_soldout"
                />

            <TextView
                android:id="@+id/btn_your_oder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginVertical="15dp"
                android:fontFamily="@font/montserrat"
                android:textColor="#000000"
                android:gravity="center|start"
                android:textSize="18dp"
                android:text="Your Order" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l1"
            android:layout_marginTop="15dp"
            android:clickable="true">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_chat" />

            <TextView
                android:id="@+id/txt_Help_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginVertical="15dp"
                android:fontFamily="@font/montserrat"
                android:textColor="#000000"
                android:gravity="center|start"
                android:textSize="18dp"
                android:text="Help Center" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_below="@+id/l2"
            android:id="@+id/l3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"

            >
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_user"
                app:tint="@color/black" />
            <TextView
                android:id="@+id/btn_Profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginVertical="15dp"
                android:fontFamily="@font/montserrat"
                android:textColor="#000000"
                android:gravity="center|start"
                android:textSize="18dp"
                android:text="Profile" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_below="@+id/l3"
            android:id="@+id/l4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            >
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_edit" />
            <TextView
                android:id="@+id/btn_Change_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginVertical="15dp"
                android:fontFamily="@font/montserrat"
                android:textColor="#000000"
                android:gravity="center|start"
                android:textSize="18dp"
                android:text="Change Password" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_below="@+id/l4"
            android:id="@+id/l5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_exit_smooth"
                app:tint="@color/black" />
            <TextView
                android:id="@+id/btn_log_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginVertical="15dp"
                android:fontFamily="@font/montserrat"
                android:textColor="#000000"
                android:gravity="center|start"
                android:textSize="18dp"
                android:text="Log Out"/>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>