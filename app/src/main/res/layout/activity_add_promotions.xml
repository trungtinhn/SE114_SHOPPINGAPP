<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".StaffView.Categories.Activity.activity_add_new_category">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:background="@color/white"
            android:src="@drawable/back_arrow" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Promotions / Add New Promotion"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="60dp"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id ="@+id/addpicture"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/add_category" />

        <TextView
            android:id="@+id/textViewAddMedia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:text="Add picture for your promotions" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_below="@id/addpicture">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="595dp"
            android:layout_below="@+id/addpicture"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:elevation="100dp">

                <View
                    android:id="@+id/view_tenKM"
                    style="@style/RectangleStyle"
                    android:layout_width="match_parent"
                    android:layout_height="86dp"
                    android:layout_below="@id/rectangle_address"
                    android:background="#FFFFFF"
                    android:elevation="100dp" />

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="23dp"
                    android:elevation="200dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Name of promotion"
                    android:textColor="@color/DarkBlue"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/tenKM"
                    android:layout_width="362dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="45dp"
                    android:elevation="200dp"
                    android:fontFamily="@font/montserrat_lights"
                    android:hint="Enter here"
                    android:textColor="@color/black"
                    android:textSize="13dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="100dp">

                <View
                    style="@style/RectangleStyle"
                    android:layout_width="match_parent"
                    android:layout_height="86dp"
                    android:layout_below="@id/view_tenKM"
                    android:layout_marginTop="10dp"
                    android:background="#FFFFFF"
                    android:elevation="100dp" />

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="23dp"
                    android:elevation="200dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Promotion detail"
                    android:textColor="@color/DarkBlue"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/chitiet_km"
                    android:layout_width="362dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="45dp"
                    android:elevation="200dp"
                    android:fontFamily="@font/montserrat_lights"
                    android:hint="Enter here"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="100dp">

                <View
                    style="@style/RectangleStyle"
                    android:layout_width="match_parent"
                    android:layout_height="86dp"
                    android:layout_below="@id/view_tenKM"
                    android:layout_marginTop="10dp"
                    android:background="#FFFFFF"
                    android:elevation="100dp" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="23dp"
                    android:elevation="200dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Minimun value for order"
                    android:textColor="@color/DarkBlue"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/dontoi_thieu"
                    android:layout_width="362dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="45dp"
                    android:elevation="200dp"
                    android:fontFamily="@font/montserrat_lights"
                    android:hint="Enter here"
                    android:textColor="@color/black"
                    android:textSize="13dp" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="100dp">

                <View
                    style="@style/RectangleStyle"
                    android:layout_width="match_parent"
                    android:layout_height="86dp"
                    android:layout_below="@id/view_tenKM"
                    android:layout_marginTop="10dp"
                    android:background="#FFFFFF"
                    android:elevation="100dp" />

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="23dp"
                    android:elevation="200dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Kind of promotion"
                    android:textColor="@color/DarkBlue"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/loaikhuyenmai"
                    android:layout_width="362dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="45dp"
                    android:elevation="200dp"
                    android:fontFamily="@font/montserrat_lights"
                    android:hint="Enter here"
                    android:textColor="@color/black"
                    android:textSize="13dp" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="100dp">
                <View
                    style="@style/RectangleStyle"
                    android:layout_width="match_parent"
                    android:layout_height="86dp"
                    android:layout_below="@id/view_tenKM"
                    android:layout_marginTop="10dp"
                    android:background="#FFFFFF"
                    android:elevation="100dp" />
                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="23dp"
                    android:elevation="200dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Start day"
                    android:textColor="@color/DarkBlue"
                    android:textSize="16dp" />
                <EditText
                    android:id="@+id/start"
                    android:layout_width="362dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="45dp"
                    android:elevation="200dp"
                    android:fontFamily="@font/montserrat_lights"
                    android:hint="Enter here"
                    android:textColor="@color/black"
                    android:textSize="13dp" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="100dp">
                <View
                    style="@style/RectangleStyle"
                    android:layout_width="match_parent"
                    android:layout_height="86dp"
                    android:layout_below="@id/view_tenKM"
                    android:layout_marginTop="10dp"
                    android:background="#FFFFFF"
                    android:elevation="100dp" />
                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="23dp"
                    android:elevation="200dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="End day"
                    android:textColor="@color/DarkBlue"
                    android:textSize="16dp" />
                <EditText
                    android:id="@+id/end"
                    android:layout_width="362dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="45dp"
                    android:elevation="200dp"
                    android:fontFamily="@font/montserrat_lights"
                    android:hint="Enter here"
                    android:textColor="@color/black"
                    android:textSize="13dp" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="100dp">
                <View
                    style="@style/RectangleStyle"
                    android:layout_width="match_parent"
                    android:layout_height="86dp"
                    android:layout_below="@id/view_tenKM"
                    android:layout_marginTop="10dp"
                    android:background="#FFFFFF"
                    android:elevation="100dp" />
                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="23dp"
                    android:elevation="200dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Rate"
                    android:textColor="@color/DarkBlue"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/tile"
                    android:layout_width="362dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="45dp"
                    android:elevation="200dp"
                    android:fontFamily="@font/montserrat_lights"
                    android:hint="Enter here"
                    android:textColor="@color/black"
                    android:textSize="13dp" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
        <Button
            android:id="@+id/btn_add_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="600dp"
            android:backgroundTint="@color/orange"
            android:text="ADD NEW" />



</RelativeLayout>
