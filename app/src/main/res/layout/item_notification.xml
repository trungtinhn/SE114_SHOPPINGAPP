<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="3dp"
    android:layout_marginHorizontal="20dp"
    >
    
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgAvt"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:shapeAppearance="@style/avatar"
        android:src="@drawable/mauaodep"
        android:layout_marginVertical="10dp"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_toRightOf="@id/imgAvt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/txtNameNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SALEISLIFE"
            android:textSize="20dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            />

       <TextView
           android:id="@+id/txtContentNotification"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elitdolor sit amet "
           android:layout_gravity="center"
           />

    </LinearLayout>
</LinearLayout>