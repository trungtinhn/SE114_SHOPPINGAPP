<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="50dp"
        android:id = "@+id/cardview"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp">


        <ImageView
            android:id="@+id/img_product_customer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/anh1" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/cardview"
        android:orientation="vertical">

        <TextView
            android:id="@+id/product_name_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:text="T-Shirt Black Blank -VSD343545D - New Elevent"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/product_price_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="139.999Ä‘"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="311dp"
        android:layout_height="43dp"
        android:layout_below="@+id/linear1"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="-18dp">

        <TextView
            android:id="@+id/NUMBER_TEXT_customer"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="25dp"
            android:text="Number: " />

        <TextView
            android:id="@+id/number_of_product_customer"
            android:layout_width="40dp"
            android:layout_height="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="25dp"
            android:text="1" />

    </LinearLayout>


</RelativeLayout>