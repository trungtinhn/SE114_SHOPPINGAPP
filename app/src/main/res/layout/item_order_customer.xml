<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:id = "@+id/cardview"
        android:layout_height="60dp"
        android:layout_centerVertical="true"

        android:layout_marginLeft="20dp"
        app:cardCornerRadius="10dp">


        <ImageView
            android:id="@+id/img_product_customer"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_product" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/cardview"
        android:orientation="vertical">

        <TextView
            android:id="@+id/product_name_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black"
            android:layout_marginEnd="10dp"
            android:text="T-Shirt Black Blank -VSD343545D - New Elevent"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/product_price_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/black"
            android:layout_marginEnd="10dp"
            android:text="139.999Ä‘"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/cardview">

        <TextView
            android:id="@+id/NUMBER_TEXT_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginEnd="10dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Number: "
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/number_of_product_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="1"
            android:textColor="@color/black" />

    </LinearLayout>


</RelativeLayout>