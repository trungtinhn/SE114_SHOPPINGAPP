<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShoppingApp"
        tools:targetApi="tiramisu" >
        <activity
            android:name=".Login.EditProfile"
            android:enableOnBackInvokedCallback="true"
            android:exported="false"
            android:label="@string/title_activity_edit_profile"
            android:theme="@style/Theme.ShoppingApp.NoActionBar" />
        <activity
            android:name="StaffView.BottomNavigationCustomActivity"
            android:exported="false" />
        <activity
            android:name=".Login.Register"
            android:enableOnBackInvokedCallback="true"
            android:exported="true"
            android:label="@string/title_activity_register"
            android:theme="@style/Theme.ShoppingApp.NoActionBar"
            tools:targetApi="tiramisu" />
        <activity
            android:name="StaffView.MainActivity"
            android:exported="true">
            android:name=".MainActivity"
            android:exported="true" />
        <activity
            android:name=".Login.LoginActivity"
            android:enableOnBackInvokedCallback="true"
            android:exported="true"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.ShoppingApp.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".Login.ForgotPassword"
            android:exported="true" />



    </application>

</manifest>